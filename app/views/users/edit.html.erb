<% presenter = Users::EditPresenter.new(self) %>
<% content_for(:head) do %>
  <title><%= presenter.page_title %> | <%= t("users.edit.title") %></title>
<% end %>
<script id="user-edit__props" type="application/json">
  <%= presenter.props_to_json.html_safe %>
</script>
<div class="container mx-auto px-3 py-8 max-w-5xl">
  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <div class="flex flex-col md:flex-row">
        <div class="w-full md:w-1/3 pr-4">
          <h3 class="text-lg font-semibold">Connect you discord Account</h3>
          <p class="mt-1 text-sm text-gray-600">This will help you gain access to locked channels in discord</p>
        </div>
        <div class="mt-5 md:mt-0 w-full md:w-2/3">
          <div class="">
            <%= link_to "Connect Discord", user_discord_omniauth_authorize_path, method: :post %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div id="react-root"></div>
